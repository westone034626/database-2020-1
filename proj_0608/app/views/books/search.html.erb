<div class="w-75 p-3" style="background-color: #eee;">
    <h1>책 등록</h1>
    <form action="/books/search" method = "post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
            ISBN:<input type="text" class="form-control" name= "ISBN" require= true><br>
            <button type="submit" class="btn btn-secondary">검색</button>
        </div>
    </form>

    <%if @flag == 1 %>
        <span>
            <h2>책 정보</h2>
            <%book = Book.find_by(ISBN: params[:ISBN])%>
            IBSN : <%=book.ISBN %><br>
            쪽수 : <%=book.page%><br>
            분야 : <%=book.genre%><br>
            제목 : <%=book.title%><br>
            저자 : <%=book.author%><br>
            출판사 : <%=book.publisher%><br>
            <br><img src="<%=book.imageURL%>"><br>
            <form action="/books/create" method = "post">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <div class="form-group">
                    <input type="hidden" class="form-control" name= "ISBN" value="<%=book.ISBN%>" require= true><br>
                    <button type="submit" class="btn btn-secondary">추가</button>
                </div>
            </form>
        </span>

    <%elsif @flag == 2 %>
        <span>
            잘못된 ISBN 형식입니다!
        </span>

<%end%>




</div>