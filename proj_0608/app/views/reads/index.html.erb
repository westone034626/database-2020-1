<div class="w-75 p-3" style="background-color: #eee;">
    <h2>읽는 중: </h2>
    <table class="table">
        <th>도서명</th>
        <th>저자</th>
        <th>페이지 수</th>
        <th>장르</th>
        <th>중도하차</th>
        <th>시작</th>
        <th>완독</th>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.page %></td>
                <td><%= book.genre %></td>
                <td><a href="/reads/delete/<%= book.id%>">X</a></td>
                <% tmp_read = book.reads.find_by(book_id: book.id, user_id: current_user.id) %>
                <% if tmp_read.start == nil %>
                    <td><a href="/reads/create/<%= book.id%>">O</a></td>
                    <td>-</td>
                <% else %>
                    <td><%= tmp_read.start %></td>
                    <td><a href="/reads/clear/<%= book.id%>">clear</a></td>
                <% end %>
            </tr>
        <% end %>
    </table>
</div>